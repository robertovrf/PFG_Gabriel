	void AdaptEvents:active() {
		char state[] = parser.jsonFromArray(content, null)
		char msg[] = new char[]("../distributor/RemoteList.o!", state)
		sendMsgToRemoteDist(msg)
	}

	void sendMsgToRemoteDist(char msg[]) {
		TCPSocket remoteDist = new TCPSocket()
		if (!remoteDist.connect("localhost", 8081)) { 
			out.println("Connection error!")
			return
		}
		remoteDist.send(msg)
		remoteDist.disconnect()
		remoteDist = new TCPSocket()
		if (!remoteDist.connect("localhost", 8082)) { 
			out.println("Connection error!")
			return
		}
		remoteDist.send(msg)
