	// TODO: from where it will get the lenght?
	int List:getLength() {
		Request request = new Request()
		request.functionName = GET_LENGTH
		request.numParams = 0
		char requestStr[] = parser.jsonFromData(request, null)
		char content2[] = new char[](requestStr, "!", " ", "\r\r\r\r")
		Response response = makeRequest(remoteListsIps[pointer], content2, true)
		return iu.intFromString(response.value)
	}

	Data[] List:getContents(opt Type t) {
		// build request
		Request request = new Request()
		request.functionName = GET_CONTENTS
		request.numParams = 0
		char requestStr[] = parser.jsonFromData(request, null)
		char content2[] = new char[](requestStr, "!", " ", "\r\r\r\r")
		// get the contents from all replicas
		setupRemoteListsIPs()
		// TODO: is there a way to create dynamic array?
		int totalContents = 0
		mutex(pointerLock) {
			for (int i = 0; i < remoteListsIps.arrayLength; i++) {
				pointer = i
				totalContents += getLength()
			}
		}
		Int contents[] = new Int[totalContents]
		int lastIdx = 0
		for (int i = 0; i < remoteListsIps.arrayLength; i++) {
			Response response = makeRequest(remoteListsIps[i], content2, true)
			Int nums[] = parser.jsonToArray(response.value, typeof(Int[]), null)
			int j = 0
			while (j < nums.arrayLength) {
				contents[lastIdx+j] = nums[j]
				j++
			}
			lastIdx = j
		}
		return contents
	}

